alias em='emacsclient -c -a= $*'
alias emt='emacsclient -t -a= $*'
alias ls='ls -GFh'

alias brewi='brew install'
alias brewo='brew outdate'
alias brews='brew search'
alias brewud='brew update'
alias brewu='brew upgrade'
alias brewr='brew uninstall'

alias cask='brew cask'
alias caski='cask install'
alias casko='cask outdated --greedy'
alias casku='cask upgrade'

export ALTERNATE_EDITOR=""
export EDITOR="emt"        # $EDITOR opens in terminal
export VISUAL="em"         # $VISUAL opens in GUI mode
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:"$PATH"
export PATH="/usr/local/opt/curl/bin:$PATH"
export PATH="$HOME/.poetry/bin:$PATH"

source $HOME/.cargo/env
source /usr/local/Caskroom/miniconda/base/etc/profile.d/conda.sh
source /usr/local/etc/profile.d/z.sh

# Set the default Less options.
# Mouse-wheel scrolling has been disabled by -X (disable screen clearing).
# Remove -X and -F (exit if the content fits on one screen) to enable it.
export LESS="-g -i -M -R -S -w -z-4"
