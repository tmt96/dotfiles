alias em='emacsclient -c '
alias et='emacsclient -t'
export ALTERNATE_EDITOR=""
export EDITOR="et"         # $EDITOR opens in terminal
export VISUAL="em"         # $VISUAL opens in GUI mode
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx
alias ls='ls -GFh'
export TERM=xterm-256color

export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/share/dotnet:/Library/Frameworks/Mono.framework/Versions/Current/Commands:/Library/TeX/texbin:"$PATH"
export PATH="$PATH":/usr/local/anaconda3/bin:~/.dotnet/tool
export PATH="/usr/local/opt/curl/bin:$PATH"
source $HOME/.cargo/env

# Set the default Less options.
# Mouse-wheel scrolling has been disabled by -X (disable screen clearing).
# Remove -X and -F (exit if the content fits on one screen) to enable it.
export LESS="-g -i -M -R -S -w -z-4"
