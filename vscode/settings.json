// Place your settings in this file to overwrite the default settings
{
  /**********************************************
   * Main editor settings
   ***********************************************/
  "breadcrumbs.enabled": true,
  "debug.console.fontSize": 13,
  "debug.console.lineHeight": 24,
  "debug.toolBarLocation": "docked",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.dragAndDrop": false,
  "editor.find.autoFindInSelection": "multiline",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "explorer.openEditors.visible": 1,
  "editor.fontSize": 13,
  "editor.insertSpaces": true,
  "editor.lineHeight": 24,
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": false,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "off",
  "files.associations": {
    "*.erb": "erb"
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "search.showLineNumbers": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.shell.osx": "zsh",
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\Sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
  "terminal.integrated.scrollback": 5000,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.commandPalette.preserveInput": true,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.editor.showTabs": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.iconTheme": "vscode-icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,

  /**********************************************
   * Extensions Settings
   ***********************************************/
  "bracket-pair-colorizer-2.showHorizontalScopeLine": false,
  "bracket-pair-colorizer-2.showVerticalScopeLine": true,
  "C_Cpp.clang_format_style": "Google",
  "csharp.referencesCodeLens.enabled": true,
  "csharp.suppressHiddenDiagnostics": false,
  "cSpell.enabledLanguageIds": [
    "json",
    "latex",
    "markdown",
    "plaintext",
    "text",
    "yml"
  ],
  "cSpell.userWords": ["impactful", "scalability"],
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "FSharp.enableTreeView": true,
  "FSharp.fsacRuntime": "netcore",
  "git.autofetch": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": false
  },
  "gitlens.keymap": "chorded",
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.views.compare.avatars": true,
  "gitlens.views.compare.location": "scm",
  "gitlens.views.fileHistory.location": "scm",
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.repositories.avatars": true,
  "gitlens.views.repositories.enabled": true,
  "gitlens.views.repositories.files.layout": "auto",
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.search.avatars": true,
  "gitlens.views.search.location": "scm",
  "hg.pushPullScope": "current",
  "hg.useBookmarks": true,
  "java.implementationsCodeLens.enabled": true,
  "java.referencesCodeLens.enabled": true,
  "java.signatureHelp.enabled": true,
  "java.trace.server": "off",
  "latex-workshop.chktex.enabled": true,
  "latex-workshop.message.update.show": false,
  "latex-workshop.view.pdf.hand": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "markdownlint.config": {
    "MD013": false,
    "MD033": false,
    "MD025": {
      "front_matter_title": ""
    }
  },
  "markdownlint.customRules": [
    "{docsmsft.docs-markdown}/markdownlint-custom-rules/rules.js"
  ],
  "oneDarkPro.editorTheme": "Onedark Pro",
  "oneDarkPro.vivid": true,
  "oneDarkPro.bold": true,
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#b52e31"
    },
    {
      "name": "Auth0 Orange",
      "value": "#eb5424"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "C# Purple",
      "value": "#68217A"
    },
    {
      "name": "Gatsby Purple",
      "value": "#639"
    },
    {
      "name": "Go Cyan",
      "value": "#5dc9e2"
    },
    {
      "name": "Java Blue-Gray",
      "value": "#557c9b"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#00b3e6"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],
  "powershell.startAutomatically": false,
  "powershell.integratedConsole.showOnStartup": false,
  "python.condaPath": "usr/local/Caskroom/miniconda/base/condabin/conda",
  "python.formatting.provider": "black",
  "python.languageServer": "Microsoft",
  "python.linting.flake8Args": ["--max-complexity=6"],
  "rest-client.enableTelemetry": true,
  "ruby.format": false,
  "ruby.lint": {
    "rubocop": {
      "lint": true,
      "rails": true
    }
  },
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.parameterHints": false,
  "solargraph.diagnostics": true,
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.forceDownload": false,
  "sync.quietSync": true,
  "sync.removeExtensions": false,
  "sync.syncExtensions": true,
  "todo-tree.tree.showScanModeButton": false,
  "vsicons.dontShowNewVersionMessage": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "statusBar.foreground": "#EFEFEF",
      "statusBarItem.hoverBackground": "#3F3F55",
      "activityBar.foreground": "#EFEFEF"
    }
  },

  /*************************************
   * Language-specific settings
   **************************************/
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[latex]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[fsharp]": {
    "editor.defaultFormatter": "Ionide.Ionide-fsharp"
  }
}
